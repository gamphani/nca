<% if !@doc.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @doc.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <%= form_for :docs_new, :url => { :action => :create }                           do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :department %>
    <%= f.text_field :department %>
    <%= f.label :attachment %>
    <%= f.file_field :attachment %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>